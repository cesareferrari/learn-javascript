<script is:inline id="clock.js">
	const p = document.querySelector("#time");

	const [s, l] = ["75%", "75%"];

  function changeClock () {
	  const topOffset = Math.random() * 100;
	  const leftOffset = Math.random() * 100;
		const h = Math.random() * 360;

		currentTime = new Date().toLocaleTimeString();
		
		p.textContent = currentTime;

		p.setAttribute("style", `color: hsl(${h} ${s} ${l}); top: ${topOffset}%; left: ${leftOffset}%`);

		//p.style.top = `${randomNumber(0, 200)}px`;
		//p.style.left = `${randomNumber(0, 300)}px`;
		//p.style.color = shuffle(colors)[0];
	}

	setInterval(changeClock, 3000);

</script>


<style>
	#clock {
		width: 100%;
		height: 50vh;
		position: relative;
	}

	#clock p {
		width: 200px;
		position: relative;
		font-size: xx-large;
	}
